<div class='row'>
  <h2>Books</h2>


  <dl class="dl-horizontal">
    <dt><%= link_to 'New Book', new_book_path, class:'btn' %></dt>
  </dl>

 <% @books.each do |book| %>

      <dl class="dl-horizontal">

        <dt>Book name</dt>
        <dd><%= link_to book.name, book %></dd>

        <dt>Author</dt>
        <dd><%= link_to book.author.name  %></dd>

        <dt>Publisher</dt>
        <dd><%= book.publisher.name %></dd>

      </dl>

      <!--<td><%= link_to 'Edit', edit_book_path(book) %></td>-->
