<%= form_for @book, html:{class:'form-horizontal' } do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, 'error') %> prohibited this book from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, class:'control-label'  %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :author, class: 'control-label' %>
    <div class="controls">
      <%= f.select :author_id, Author.all.collect {|c| [ c.name, c.id ] }, {include_blank: true} %>
      Or
      <%= f.fields_for :author do |author_form| %>
        <%= author_form.text_field :name %>
      <% end %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :publisher, class:'control-label' %>
    <div class='controls'>
      <%= collection_select :book, :publisher_id, Publisher.all, :id, :name, {include_blank: true} %>
      Or
      <%= f.fields_for :publisher do |publisher_form| %>
         <%= publisher_form.text_field :name %>
      <% end %>
    </div>
  </div>
  <div class="control-group">
     <%= f.label :location, class: 'control-label' %>
     <div class="controls">
       <%= f.select :location_id, Location.all.collect {|c| [ c.name, c.id ] }, {include_blank: true} %>
       Or
       <%= f.fields_for :location do |location_form| %>
           <%= location_form.text_field :name %>
       <% end %>
     </div>
  </div>
    <div class="control-group">
      <%= f.label :category, class:'control-label'  %>
      <div class="controls">
        <%= f.text_field :category %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :language, class:'control-label'  %>
      <div class="controls">
        <%= f.text_field :language %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :pages, class:'control-label'  %>
      <div class="controls">
        <%= f.text_field :pages %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :isbn, class:'control-label'  %>
      <div class="controls">
        <%= f.text_field :isbn %>
      </div>
    </div>
    <div class="control-group">
        <%= f.label :version, class:'control-label'  %>
        <div class="controls">
          <%= f.text_field :version %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :copies, class:'control-label'  %>
        <div class="controls">
          <%= f.text_field :copies %>
        </div>
      </div>
  <div>
    <button type="submit" class="btn">Create</button>
  </div>

<% end %>