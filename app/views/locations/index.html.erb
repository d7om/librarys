<h1>Libraries</h1>
<dl class="dl-horizontal">
  <dt><%= link_to 'New Library', new_location_path, class:'btn' %></dt>
</dl>
<% @locations.each do |location| %>
    <dl class="dl-horizontal">
      <dt>Library name</dt>
      <dd><%= link_to location.name, location %></dd>

      <dt>No Books</dt>
      <dd><%= location.books.length %></dd>
    </dl>

<% end %>

